<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_upcoming_class.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:padding="20dp"
    android:layout_marginBottom="16dp"
    android:elevation="2dp">

    <!-- Class Content -->
    <LinearLayout
        android:id="@+id/upcomingClassContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/classDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Class"
            android:textColor="#6C757D"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/className"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculus 101"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/classTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:00 AM"
            android:textColor="#6C757D"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Class Icon/Image -->
    <ImageView
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:background="@drawable/assignment_card_background"
        android:backgroundTint="@color/blueGreen"
        android:src="@drawable/clz"
        android:padding="12dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside" />

</LinearLayout>