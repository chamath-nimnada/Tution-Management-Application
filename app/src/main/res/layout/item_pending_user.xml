<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_pending_user.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:clickable="true">

    <!-- User Icon -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pending_user"
        android:background="@drawable/notification_icon_background"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="top" />

    <!-- User Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pendingUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/pendingUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#6C757D"
            android:textSize="14sp" />

        <!-- Optional: Add phone number display -->
        <TextView
            android:id="@+id/pendingUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="#6C757D"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>