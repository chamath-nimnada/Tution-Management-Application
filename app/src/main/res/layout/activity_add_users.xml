<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddUsers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/goBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ico_arrow_back"
                android:backgroundTint="@color/gray"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New User Registration"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_marginLeft="80dp"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Teacher Registration Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="19dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Teacher Accounts"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blueGreen"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"/>

                        <LinearLayout
                            android:id="@+id/teacherContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>

                        <EditText
                            android:id="@+id/teacherName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/teacherEmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/teachingSubject"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Teaching Subject"
                            android:inputType="text"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/teacherPhone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Phone No"
                            android:inputType="phone"
                            android:padding="9dp" />

                        <Button
                            android:id="@+id/registerTeacherBtn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="22dp"
                            android:backgroundTint="@color/blueGreen"
                            android:text="Register Teacher"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Student Registration Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="19dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Student Accounts"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blueGreen"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"/>

                        <LinearLayout
                            android:id="@+id/studentContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>

                        <EditText
                            android:id="@+id/studentName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/studentEmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/studentBD"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Birthday (DD/MM/YYYY)"
                            android:inputType="text"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/studentPhone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Phone No"
                            android:inputType="phone"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/studentParentPhone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Parent Phone No"
                            android:inputType="phone"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/studentAddress"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Address"
                            android:inputType="phone"
                            android:padding="9dp" />

                        <AutoCompleteTextView
                            android:id="@+id/gradeCombo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawableEnd="@drawable/ico_arrow_drop_down"
                            android:drawablePadding="8dp"
                            android:focusable="true"
                            android:hint="Select Grade Level"
                            android:inputType="none"
                            android:padding="9dp" />

                        <AutoCompleteTextView
                            android:id="@+id/classCombo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawableEnd="@drawable/ico_arrow_drop_down"
                            android:drawablePadding="8dp"
                            android:enabled="false"
                            android:focusable="true"
                            android:hint="Select Subject"
                            android:inputType="none"
                            android:padding="9dp" />

                        <Button
                            android:id="@+id/registerStudentBtn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="22dp"
                            android:backgroundTint="@color/blueGreen"
                            android:text="Register Student"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="19dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Admin Accounts"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blueGreen"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"/>

                        <LinearLayout
                            android:id="@+id/adminContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>

                        <EditText
                            android:id="@+id/adminName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/adminEmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:padding="9dp" />

                        <EditText
                            android:id="@+id/adminPhone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_outline"
                            android:drawablePadding="8dp"
                            android:hint="Phone No"
                            android:inputType="phone"
                            android:padding="9dp" />

                        <Button
                            android:id="@+id/registerAdminBtn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="22dp"
                            android:backgroundTint="@color/blueGreen"
                            android:text="Register Teacher"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>